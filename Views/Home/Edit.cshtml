@model Activity

<div class="page-title">
    <h1>Edit @Model.Title</h1>
</div>

<div class="form-container-activity">
    <form action="/update/@Model.ActivityId" method="post">
        <div class="form-group col-sm-12">
            <label>Title:</label>
            <span class = "text-danger" asp-validation-for="Title"></span>
            <input type="text" name="Title" class="form-control" value="@Model.Title" />
        </div>
        <div class="form-group col-sm-6">
            <label>Start Time:</label>
            <input type="datetime-local" name="StartTime" class="form-control" value=@Model.StartTime.ToString("yyyy-MM-ddThh:mm") />
            <span class = "text-danger" asp-validation-for="StartTime"></span>
        </div>
            <div class="form-group col-sm-3">
            <label>Duration of Activity:</label>
            <input type="number" name="Duration" class="form-control" value="@Model.Duration" />
            <span class = "text-danger" asp-validation-for="Duration"></span>
        </div>
        <div class="form-group col-sm-3">
        <label>Minutes/ Hours/ Days:</label>
            <select name="Time" class="form-control">
                @{
                switch (@Model.Time)
                {
                    case 1:
                        <option value=1>Minutes</option>
                        break;
                    case 2:
                        <option value=2>Hours</option>
                        break;
                    case 3:
                        <option value=3>Days</option>
                        break;
                    default:
                        <td>Case default</td>
                        break;
                }
            }
                <option value=1>Minutes</option>
                <option value=2>Hours</option>
                <option value=3>Days</option>
            </select>
        <span class = "text-danger" asp-validation-for="Time"></span>
        </div>
        <div class="form-group col-sm-12">
            <label>Description:</label>
            <span class = "text-danger" asp-validation-for="Description"></span>
            <textarea class="form-control" name="Description"
            rows="5" cols="33">@Model.Description</textarea>
        </div>
        <div class="col-sm-12">
            <input type="submit" class="btn btn-primary pull-right" />
        </div>
    </form>
</div>