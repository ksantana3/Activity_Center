@model Activity

<div class="page-title">
    <h1>Plan an Activity</h1>
</div>
<div class="form-container-activity">
    <form action="/activity" method="post">
        <div class="form-group col-sm-12">
            <label>Activity Name:</label>
            <span class = "text-danger" asp-validation-for="Title"></span>
            <input type="text" name="Title" class="form-control" />
        </div>
        <div class="form-group col-sm-6">
            <label>Activity Start Time:</label>
            <input type="datetime-local" name="StartTime" class="form-control" value= @DateTime.Now.ToString("yyyy-MM-ddThh:mm")  />
            <span class = "text-danger" asp-validation-for="StartTime"></span>
        </div>
        <div class="form-group col-sm-3">
            <label>Duration of Activity:</label>
            <input type="number" name="Duration" class="form-control" value="0"/>
            <span class = "text-danger" asp-validation-for="Duration"></span>
        </div>
        <div class="form-group col-sm-3">
            <label>Minutes/ Hours/ Days:</label>
                <select name="Time" class="form-control">
                    <option value=0>Please Choose an Option</option>
                    <option value=1>Minutes</option>
                    <option value=2>Hours</option>
                    <option value=3>Days</option>
                </select>
            <span class = "text-danger" asp-validation-for="Time"></span>
        </div>
        <div class="form-group col-sm-12">
            <label>Description:</label>
            <span class = "text-danger" asp-validation-for="Description"></span>
            <textarea class="form-control" name="Description"
            rows="5" cols="33"></textarea>
        </div>
        <div class="col-sm-12">
            <input type="submit" class="btn btn-primary pull-right" />
        </div>
    </form>
</div>